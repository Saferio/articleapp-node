extends layout

block content
    h1=article.title
    h5 Written By #{author}
    p=article.body
    if article.filename
        a.btn.btn-warning(href='/uploads/'+article.filename) Download  
    hr
    if user
        if user.id==article.author
            a.btn.btn-primary(href='/article/edit/'+article._id) Edit  
            | 
            a.btn.btn-danger.deleteArticle(href='#',data-id=article._id) Delete